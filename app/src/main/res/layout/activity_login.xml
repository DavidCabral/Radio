<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.radio.activity.LoginActivity">

    <ImageView
        android:layout_width="369dp"
        android:layout_height="249dp"
        app:srcCompat="@drawable/radio_1"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/activity_login"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        app:layout_constraintRight_toRightOf="@+id/activity_login" />

    <com.facebook.login.widget.LoginButton
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_facebook"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="Ignorar"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_ignore"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_facebook"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>
