<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="br.com.radio.fragment.RadioFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_play_stop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/start"
            tools:ignore="ContentDescription,MissingConstraints"
            android:contentDescription=""
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_conectando"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_play_stop"
            app:layout_constraintVertical_bias="0.100000024"
            android:layout_marginTop="8dp" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
