<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    android:id="@+id/rootFirstPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    tools:background="@android:color/holo_orange_dark">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="@string/aluno"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%"
        android:id="@+id/tx"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="David Cabral"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%"
        android:id="@+id/tx_type"
        android:layout_below="@+id/iv_dav_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/iv_dav_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:srcCompat="@drawable/david"

        app:layout_heightPercent="50%"
        app:layout_widthPercent="100%"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_dav_2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_7"

        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="22%"
        app:layout_marginTopPercent="35%"
        app:layout_widthPercent="17%" />

    <ImageView
        android:id="@+id/iv_dav_3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_6"

        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="47%"
        app:layout_widthPercent="20%" />

    <ImageView
        android:id="@+id/iv_dav_4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_3"

        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="46%"
        app:layout_marginTopPercent="43%"
        app:layout_widthPercent="15%"
        android:layout_above="@+id/tx_type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="18dp" />

    <ImageView
        android:id="@+id/iv_dav_5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_0_6"

        app:layout_heightPercent="6%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="26%"
        app:layout_widthPercent="6%"
        android:layout_alignTop="@+id/iv_dav_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <ImageView
        android:id="@+id/iv_dav_6"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_0_7"

        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="14%"
        app:layout_marginTopPercent="25%"
        app:layout_widthPercent="9%"
        android:layout_below="@+id/iv_dav_5"
        android:layout_alignLeft="@+id/tx"
        android:layout_alignStart="@+id/tx"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />
</android.support.percent.PercentRelativeLayout>